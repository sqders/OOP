        <TextBlock x:Name="___Без_имени__Copy1" HorizontalAlignment="Left" Margin="222,299,0,0" Text="Matrix 2 [ColRaw]" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:Name="But1" Content="Тык" HorizontalAlignment="Left" Margin="218,14,0,0" VerticalAlignment="Top" Click="But1_Click" Width="40" Height="20"/>
        <Button x:Name="But2" Content="Дык" HorizontalAlignment="Left" Margin="520,12,0,0" VerticalAlignment="Top" Click="But2_Click" Width="40" Height="20"/>
    </Grid>
</Window>
