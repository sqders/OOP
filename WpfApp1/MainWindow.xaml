            <Grid x:Name="Result" Background="#FFABA0B3" ScrollViewer.HorizontalScrollBarVisibility="Visible" UseLayoutRounding="True" FlowDirection="LeftToRight" ScrollViewer.VerticalScrollBarVisibility="Visible" MaxWidth="260" MaxHeight="250" Grid.IsSharedSizeScope="True" ScrollViewer.CanContentScroll="True" ShowGridLines="True" Height="240" Width="240"/>
        </ScrollViewer>
        <!--<Grid x:Name="Result" Margin="628,39,10,92" Background="#FFABA0B3" ShowGridLines="True" Width="262" ScrollViewer.HorizontalScrollBarVisibility="Hidden"/>-->


        <TextBox x:Name="ColRow" HorizontalAlignment="Left" Margin="222,322,0,0" Text="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="40" TextAlignment="Center" FontStyle="Normal" TextDecorations="{x:Null}" VerticalContentAlignment="Top" HorizontalContentAlignment="Left" FontSize="24"/>
        <TextBox x:Name="Col_2" HorizontalAlignment="Left" Margin="403,322,0,0" Text="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="40" TextAlignment="Center" FontStyle="Normal" TextDecorations="{x:Null}" VerticalContentAlignment="Top" HorizontalContentAlignment="Left" FontSize="24"/>
        <TextBlock HorizontalAlignment="Left" Margin="320,19,0,0" Text="Matrix 2" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="639,18,0,0" Text="Result" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="___Без_имени_" HorizontalAlignment="Left" Margin="41,299,0,0" Text="Matrix 1 [Colms]" TextWrapping="Wrap" VerticalAlignment="Top"/>
