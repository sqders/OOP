<Window x:Class="TestCaseResult.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestCaseResult"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FF057E10">
        <Button x:Name="testButton" Content="Тест" HorizontalAlignment="Left" Margin="345,30,0,0" VerticalAlignment="Top" Width="100" Height="50" FontFamily="Verdana" FontSize="30" Background="#FF00FF17" Click="testButton_Click"/>
        <Label x:Name="failLabel" Content="Fail 0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,30,0,0" Width="300" Height="50" FontFamily="Verdana" FontSize="30" Background="#FF89CD8F"/>
        <Label x:Name="passLabel" Content="Pass 0" HorizontalAlignment="Right" Margin="0,30,30,0" VerticalAlignment="Top" Width="300" Height="50" FontFamily="Verdana" FontSize="30" Background="#FF89CD8F"/>
        <ListBox x:Name="failureReasonListBox" HorizontalAlignment="Left" Height="300" Margin="30,100,0,0" VerticalAlignment="Top" Width="730" FontFamily="Verdana" FontSize="30" Background="#FF89CD8F"/>

    </Grid>
</Window>
