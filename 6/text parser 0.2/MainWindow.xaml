<Window x:Class="text_parser_0._2.MainWindow"  
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
        xmlns:local="clr-namespace:text_parser_0._2"
        mc:Ignorable="d"  
        Title="Text Parser" Height="450" Width="800" Loaded="Window_Loaded" >  
    <Grid >
        <Button x:Name="OpenWordPadButton" Content="Открыть WordPad" HorizontalAlignment="Left" Margin="15,30,0,0" VerticalAlignment="Top" Height="30" Width="100" Click="Window_Loaded"/>
        <Button x:Name="LoadButton" Content="Загрузить файл" HorizontalAlignment="Left" Margin="15,310,0,0" VerticalAlignment="Top" Height="30" Width="100" Click="LoadButton_Click"/>
        <Button x:Name="SaveButton" Content="Сохранить файл" HorizontalAlignment="Left" Margin="15,350,0,0" VerticalAlignment="Top" Height="30" Width="100" Click="SaveButton_Click"/>
        <TextBox x:Name="FileTextBox" HorizontalAlignment="Left" Height="370" Margin="140,25,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="635"/>
        <Button x:Name="ParseButton" Content="Пирсировать" HorizontalAlignment="Left" Margin="15,175,0,0" VerticalAlignment="Top" Height="30" Width="100" Click="ParseButton_Click"/>
    </Grid>  
</Window>  